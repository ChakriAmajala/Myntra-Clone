pipeline {
    agent any

    tools {
        jdk 'jdk17'
        nodejs 'node23'
    }

    environment {
        DOCKERHUB_USER = 'chakriamajaladocker'
        IMAGE_NAME = 'myntra_clone'
        HOST_PORT = "5000"
        CONTAINER_PORT = "5000"  // ‚úÖ Matches Dockerfile/app
        SCANNER_HOME = tool 'sonar-scanner'
        AWS_REGION = 'ap-southeast-2'
        SONAR_HOST_URL = 'http://3.27.219.50:9090/'
    }

    stages {

        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout from Git') {
            steps {
                git branch: 'main', url: 'https://github.com/ChakriAmajala/Myntra-Clone.git'
                sh 'ls -la'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withCredentials([string(credentialsId: 'sonarr', variable: 'SONAR_TOKEN')]) {
                    sh """
                        echo 'üîç Running SonarQube analysis...'
                        ${SCANNER_HOME}/bin/sonar-scanner \
                          -Dsonar.projectKey=Flipkart_Clone \
                          -Dsonar.projectName=Flipkart_Clone \
                          -Dsonar.host.url=${SONAR_HOST_URL} \
                          -Dsonar.login=${SONAR_TOKEN}
                    """
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh """
                        set -e
                        echo 'üê≥ Building Docker image...'
                        docker build -t ${DOCKERHUB_USER}/${IMAGE_NAME}:latest .
                    """
                }
            }
        }

        stage('Login to DockerHub') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-cred', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                        sh """
                            echo 'üîê Logging in to Docker Hub...'
                            echo ${PASS} | docker login -u ${USER} --password-stdin
                        """
                    }
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                sh """
                    echo 'üì§ Pushing image to Docker Hub...'
                    docker push ${DOCKERHUB_USER}/${IMAGE_NAME}:latest
                """
            }
        }

        stage('Deploy Container') {
            steps {
                script {
                    sh """
                        echo 'üöÄ Deploying container...'

                        # Stop and remove old container if exists
                        docker rm -f myntra_clone || true

                        # Run new container with correct ports
                        docker run -d --name myntra_clone -p ${HOST_PORT}:${CONTAINER_PORT} ${DOCKERHUB_USER}/${IMAGE_NAME}:latest

                        echo '‚úÖ Deployment complete. Checking containers...'
                        docker ps -a
                    """
                }
            }
        }
    }

    post {
        always {
            emailext(
                attachLog: true,
                subject: "'${currentBuild.result}' - myntra_Clone Pipeline",
                body: """<b>Project:</b> ${env.JOB_NAME}<br/>
                         <b>Build Number:</b> ${env.BUILD_NUMBER}<br/>
                         <b>URL:</b> ${env.BUILD_URL}<br/>""",
                to: 'chakridevopsengineer@gmail.com'
            )
        }
    }
}
